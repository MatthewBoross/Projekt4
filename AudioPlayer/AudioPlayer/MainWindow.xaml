<Window x:Class="AudioPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioPlayer"
        mc:Ignorable="d"
        Title="Audio Player" Height="450" Width="800" ResizeMode="CanMinimize">
    <Grid>
        <Label Content="Audio Player" HorizontalAlignment="Left" Margin="30,30,0,0" VerticalAlignment="Top" Height="49" Width="191" FontSize="30"/>
        <Button x:Name="PlayPauseButton" Content="⏯" HorizontalAlignment="Left" Margin="30,100,0,0" VerticalAlignment="Top" Width="50" Height="50" FontSize="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Click="PlayPauseButton_Click"/>
        <Button x:Name="StopButton" Content="⏹" HorizontalAlignment="Left" Margin="100,100,0,0" VerticalAlignment="Top" Width="50" Height="50" FontSize="30" Click="StopButton_Click"/>
        <Button x:Name="PrevButton" Content="⏮" HorizontalAlignment="Left" Margin="170,100,0,0" VerticalAlignment="Top" Width="50" Height="50" FontSize="30" Click="PrevButton_Click" MouseDoubleClick="PrevButton_MouseDoubleClick"/>
        <Button x:Name="NextButton" Content="⏭" HorizontalAlignment="Left" Margin="240,100,0,0" VerticalAlignment="Top" Width="50" Height="50" FontSize="30" Click="NextButton_Click"/>
        <Button x:Name="RepeatButton" Content="🔁️" HorizontalAlignment="Left" Margin="310,100,0,0" VerticalAlignment="Top" Width="50" Height="50" FontSize="30" TextOptions.TextHintingMode="Fixed"/>
        <Label x:Name="PositionLabel" Content="00:00/00:00" HorizontalAlignment="Left" Margin="380,85,0,0" VerticalAlignment="Top" Height="45" Width="140" VerticalContentAlignment="Bottom" FontSize="20"/>
        <Slider x:Name="PositionSlider" Thumb.DragStarted="PositionSlider_DragStarted" Thumb.DragCompleted="PositionSlider_DragCompleted" HorizontalAlignment="Left" Margin="380,130,0,0" VerticalAlignment="Top" Height="20" Width="330" Maximum="1" TickPlacement="BottomRight"/>
        <Label Content="Volume" HorizontalAlignment="Left" Margin="640,30,0,0" VerticalAlignment="Top" Height="40" Width="90" FontSize="20"/>
        <Slider x:Name="VolumeSlider" HorizontalAlignment="Left" Margin="730,30,0,0" VerticalAlignment="Top" Width="20" Orientation="Vertical" Height="120" Value="100" Maximum="100" TickPlacement="BottomRight"/>
        <ListBox x:Name="SongsListBox" HorizontalAlignment="Left" Height="150" Margin="30,170,0,0" VerticalAlignment="Top" Width="720" FontSize="10" MouseDoubleClick="SongsListBox_MouseDoubleClick"/>
        <Button x:Name="AddSongsButton" Content="Add songs to playlist..." HorizontalAlignment="Left" Margin="30,340,0,0" VerticalAlignment="Top" Width="180" Height="50" FontSize="14" Click="AddSongsButton_Click"/>
        <Button x:Name="RemoveSongButton" Content="Remove highlighted song from playlist" HorizontalAlignment="Left" Margin="230,340,0,0" VerticalAlignment="Top" Width="260" FontSize="14" Height="50" Click="RemoveSongButton_Click"/>
        <Button x:Name="SavePlaylistButton" Content="Save playlist..." HorizontalAlignment="Left" Margin="510,340,0,0" VerticalAlignment="Top" Width="110" Height="50" FontSize="14"/>
        <Button x:Name="LoadPlaylistButton" Content="Load playlist..." HorizontalAlignment="Left" Margin="640,340,0,0" VerticalAlignment="Top" Width="110" Height="50" FontSize="14"/>
    </Grid>
</Window>
